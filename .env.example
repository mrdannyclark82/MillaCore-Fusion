# ========================================
# AI Provider API Keys
# ========================================

# xAI / Grok API Key
# Get your key from: https://x.ai/api
XAI_API_KEY=your_xai_api_key_here

# Grok API Key (if different from XAI_API_KEY)
GROK_API_KEY=your_grok_api_key_here

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (for fallback or embeddings)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# FAISS Vector Store Configuration
# ========================================

# Path to store FAISS index files
FAISS_INDEX_PATH=./data/faiss_index

# Embedding dimension (default: 1536 for OpenAI ada-002)
FAISS_DIMENSION=1536

# Maximum number of vectors to store
FAISS_MAX_VECTORS=100000

# ========================================
# Encryption & Security
# ========================================

# AES-256 encryption key (must be 32 bytes)
# Generate with: openssl rand -hex 32
AES_ENCRYPTION_KEY=your_32_byte_encryption_key_here_0123

# Salt for key derivation
# Generate with: openssl rand -hex 16
AES_ENCRYPTION_SALT=your_16_byte_salt_here

# ========================================
# Database Configuration
# ========================================

# SQLite database URL
DATABASE_URL=sqlite:///./data/milla.db

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://user:password@localhost:5432/millacore

# ========================================
# Server Configuration
# ========================================

# Server host
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=3000

# API base URL
API_BASE_URL=http://localhost:3000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# Voice & Speech Services
# ========================================

# ElevenLabs API Key
# Get your key from: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Voice model selection
VOICE_MODEL=alice

# Speech-to-text provider (google|whisper|browser)
STT_PROVIDER=browser

# Text-to-speech provider (elevenlabs|google|browser)
TTS_PROVIDER=browser

# ========================================
# GitHub Integration
# ========================================

# GitHub Personal Access Token
# For auto-PR and GitHub API access
GITHUB_TOKEN=your_github_token_here

# Repository information
GITHUB_OWNER=mrdannyclark82
GITHUB_REPO=MillaCore-Fusion

# ========================================
# Development & Debugging
# ========================================

# Environment (development|production|test)
NODE_ENV=development

# Log level (debug|info|warn|error)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# ========================================
# Memory & Context Management
# ========================================

# Maximum conversation history length
MAX_HISTORY_LENGTH=20

# Memory refresh interval (in seconds)
MEMORY_REFRESH_INTERVAL=300

# Context window size (tokens)
CONTEXT_WINDOW_SIZE=8000

# ========================================
# Feature Flags
# ========================================

# Enable voice features
ENABLE_VOICE=true

# Enable memory persistence
ENABLE_MEMORY_PERSISTENCE=true

# Enable browser automation
ENABLE_BROWSER_AUTOMATION=false

# Enable mobile app features
ENABLE_MOBILE_FEATURES=false

# ========================================
# External Services (Optional)
# ========================================

# Google Calendar API
GOOGLE_CALENDAR_API_KEY=your_google_calendar_key

# Gmail API
GMAIL_API_KEY=your_gmail_key

# Weather API
WEATHER_API_KEY=your_weather_api_key

# Stock API (Alpha Vantage, etc.)
STOCK_API_KEY=your_stock_api_key

# Flight tracking API
FLIGHT_API_KEY=your_flight_api_key

# ========================================
# Testing & CI/CD
# ========================================

# Test database URL
TEST_DATABASE_URL=sqlite:///./data/test_milla.db

# CI environment flag
CI=false

# Skip certain tests in CI
SKIP_INTEGRATION_TESTS=false
