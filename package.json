{
  "name": "milla-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Milla Rayne AI companion - Memory, Voice, Love, Fusion",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "dev:milla-gem": "pnpm --filter ./apps/milla-gem dev",
    "dev:gemini-assistant": "pnpm --filter ./apps/gemini-assistant dev",
    "dev:portal": "pnpm --filter ./apps/portal dev",
    "build:milla-gem": "pnpm --filter ./apps/milla-gem build",
    "build:gemini-assistant": "pnpm --filter ./apps/gemini-assistant build",
    "format": "pnpm -w run -r format",
    "bootstrap": "pnpm -w install"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "eslint": "8.x",
    "prettier": "2.x",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrdannyclark82/MillaCore-Fusion.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mrdannyclark82/MillaCore-Fusion/issues"
  },
  "homepage": "https://github.com/mrdannyclark82/MillaCore-Fusion#readme",
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "dotenv": "^17.2.3"
  },
  "packageManager": "pnpm@10.24.0"
}
